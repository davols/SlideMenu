<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/me.davido.android.slidemenu.sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <me.davido.android.slidemenu.library.RootView
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:menuMargin="80dp" >

        <fragment
            android:id="@+id/menu"
            android:name="me.davido.android.slidemenu.sample.MyListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/content"
            android:name="me.davido.android.slidemenu.sample.MyListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </me.davido.android.slidemenu.library.RootView>

</LinearLayout>